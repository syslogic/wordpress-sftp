web1:
  name: WordPress
  php_extensions:
    - mysql
    - ssh2
  shared_writable_dirs:
    - wp-content/themes/
    - wp-content/plugins/
    - wp-content/uploads/
  after_build:
    - "mv pagoda/wp-config.php wp-config.php"
  after_deploy:
    - "cp -rv pagoda/wp-content/themes/* wp-content/themes/"
    - "cp -rv pagoda/wp-content/plugins/* wp-content/plugins/"
